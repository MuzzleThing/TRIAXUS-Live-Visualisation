# TRIAXUS Database Configuration
# Copy this file to .env and modify as needed
# 
# SECURITY WARNING: Never commit .env files to version control!
# Add .env to your .gitignore file

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection URL (REQUIRED for production)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://triaxus_user:your_secure_password@localhost:5432/triaxus_db

# Enable/disable database functionality
DB_ENABLED=true

# =============================================================================
# OPTIONAL: CONNECTION POOL SETTINGS
# =============================================================================

# Connection pool size (default: 5)
# DB_POOL_SIZE=10

# Maximum overflow connections (default: 10)
# DB_MAX_OVERFLOW=20

# Pool timeout in seconds (default: 30)
# DB_POOL_TIMEOUT=30

# Connection recycle time in seconds (default: 3600)
# DB_POOL_RECYCLE=3600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable SQL query logging (set to false for production)
# DB_ECHO=false

# =============================================================================
# PRODUCTION EXAMPLE
# =============================================================================
# For production, use a secure database URL:
# DATABASE_URL=postgresql://prod_user:very_secure_password@prod-server:5432/triaxus_prod
# DB_ENABLED=true
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=30
# DB_ECHO=false

# =============================================================================
# TESTING EXAMPLE
# =============================================================================
# For testing, use a separate test database:
# DATABASE_URL=postgresql://test_user:test_password@localhost:5432/triaxus_test
# DB_ENABLED=true
# DB_POOL_SIZE=3
# DB_MAX_OVERFLOW=5
# DB_ECHO=true
