# TRIAXUS Live Visualization Environment Configuration

# Application Settings
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FILE=

# Database Configuration
DATABASE_URL=postgresql://triaxus_user:triaxus_pass@localhost:5432/triaxus_db
DATABASE_ECHO=false

# Extension Settings
TIMESCALEDB_ENABLED=true
POSTGIS_ENABLED=true

# File Processing Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
PROCESSING_BATCH_SIZE=100
FILE_WATCH_INTERVAL=1.0

# Real-time Processing Settings
REALTIME_BUFFER_SIZE=1000
CAST_MIN_DEPTH_CHANGE=5.0
CAST_MIN_DURATION=60

# Data Export Settings
EXPORT_FORMAT=netcdf
EXPORT_COMPRESSION=true

# Cache Settings
CACHE_TTL=300

# Celery/Redis Configuration (for async tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Settings (if using FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440